set wrap
set spell
set nolist
set lbr
set foldmethod=marker
set foldlevelstart=0
if has('conceal')
    set concealcursor=nc
endif

" assign ctrl-tab to snipmate, tab is used for table cells
inoremap <C-j> <C-R>=TriggerSnippet()<CR>

" natural j
map j gj
" natural k
map k gk
" quickly open the general task list
map ,tl :e tasks/index.wiki<CR>
" quickly add a new general task
map ,ta ,tlggjO
" quickly archive (_F_ile) a task
map ,tf ddzRGkp''

" configure vimwiki
function! s:ConfigureVimwiki()
    Rooter
    setlocal wrap spell nolist lbr foldmethod=marker foldlevelstart=0
endfunction
autocmd FileType vimwiki call s:ConfigureVimwiki()

command! Sync !~/scripts/vimwiki-full-sync

" vim: ft=vim
